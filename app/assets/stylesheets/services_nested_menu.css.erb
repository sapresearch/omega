/* this css is to be included in layout globally */
/* services drop down menu css, initially copied from application_evergreen.css #topnav and override */
#services_nested_menu_ul_root{
    padding: 0 0 10px;
    margin: 0;
    position: absolute;
    top: 38px;
    background: #796F3E;
    color: #fff;
    -moz-border-radius: 0 0 4px 4px;
    -webkit-border-radius: 4px 4px;
    border-radius: 4px;
    float:left;
}

#services_nested_menu_ul_root ul{
    padding: 0 0 10px;
    margin: 0;
    background: #796F3E;     
    color: #fff;
    -moz-border-radius: 0 0 4px 4px;
    -webkit-border-radius: 4px 4px;
    border-radius: 4px;
    float:left;
}

#services_nested_menu_ul_root li{
    float:none;
    margin:5px 0px;
    padding:0px;
}

#services_nested_menu_ul_root li a{
    display:block;
    height:90%;
    text-transform: capitalize;
    border-bottom: 1px dotted #312F20;
    background:#796F3E;
    padding: 3px 15px;
    color:#C5C891;
}

#services_nested_menu_ul_root li a:hover{
    /*
     background: url(<%= asset_data_uri 'omega/bg_menu_evergreen.png' %>) repeat-x;
    color: #222;
    text-decoration: none;
    */
    color:#222;
}

#services_nested_menu_ul_root li a .original_list_link{
    font-weight: bold;
}

#services_nested_menu_ul_root .nested_menu_link{
    background:#79823E;
    /*background:#8A7F4D;*/
}
#services_nested_menu_ul_root .nested_menu_link:hover{
    /*color:green;*/
    color:#222;
}


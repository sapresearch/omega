


.user_image{
    position:relative;
    top:0;
	float:right;
    border: 1px solid #ddd;
}
.user_image img{
	padding: 4px;
}

#contact_filter_wrapper{
	margin-left: 10px;
	margin-top: 10px;
	 background: url(<%= asset_data_uri 'filterBg.png' %>);
	width:148px;
	height:24px;
}
#ac-contacts{
	float:left;
	width:110px;
	position:relative;
	top:4px;
	left:4px;
	border:0;
	padding:0;
	background:transparent;
}
#clear-filter{
	cursor:pointer;
	display:none;
	position:absolute;
	right:14px;

}
#ac-contacts:focus 
{
    outline:none;
}

#filter_ctrl{
	position:relative;
	top:4px;
	right:4px;
	float:right;
	width:32px;	
}


#contacts_groups, #contacts {
    
    padding: 1px;
    height: 570px;
    overflow-y:scroll;
    overflow-x:hidden;
}

.ui-autocomplete {
    width: 130px !important;
    -moz-border-radius: 4px;
    border:1px solid #1484e6 !important;
}
#cm{
    text-align:left;
    position:relative;
overflow-y: hidden;
    overflow-x:hidden;
}#cm_contact{
padding:1em;

}
#contacts_alphabet{

    width:25px;
}
#contacts_alphabet li span{
    display:block;
    -moz-border-radius: 2px 2px 2px 2px;
     background: url(<%= asset_data_uri 'om_button_bg.png' %>) repeat-x scroll center bottom transparent;
    border: 1px solid #BBBBBB;
    color: #002A5C !important;
    margin: 2px;
    text-decoration: none !important;
    text-shadow: 0 1px 0 #FFFFFF;
    text-align: center;

}
#contacts_alphabet a {
    color:#002A5C;
}
#contacts_groups,#contacts{
    width:200px;
}
#contacts_contact_pane{
overflow-y:scroll;
z-index: 3;
position: relative;
top: -570px;
left: 410px;
width:490px;
height:570px;

 
}
#contact_mgm{
    border:1px solid #09A6B3;
    height:2em;
}

.highlight {
    font-weight:bold;
    color:#055F67;
}

#contacts_groups li {

    padding:0  0  0 4px;
}
#contacts table {
    
    width:180px;
    border-collapse: collapse;
}
#cm table tr {
    height:20px;
}
#cm table td{
    vertical-align:top;
    padding:2px;
}


#contacts_groups{
    position:relative;
    overflow-y: hidden;
}
#contacts_groups .ui-accordion-content{
    margin:0;
    padding:0;
}
.group-list{
    height:300px;
    overflow-y:scroll;
}


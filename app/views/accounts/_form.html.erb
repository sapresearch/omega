<%= form_for(@account) do |f| %>
  <% if @account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @account.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<p>
		<%= f.label :account_name %>
		<%= f.text_field :name %>
	</p>

	<br />
	
	<p> Create a administrator for your new account: </p>
	<p>Username <%= text_field_tag 'user[username]' %></p>
	<p>Password <%= password_field_tag 'user[password]' %></p>
	<p>Confirm Password <%= password_field_tag 'user[password_confirmation]' %></p>
	<p>Email <%= text_field_tag 'user[email]' %></p>

	<%= f.fields_for :contact do |c|%>

	 <h3 class="application-form">PERSONAL INFORMATION </h3> 

     	<p>
     		<%= c.label :first_name%>
	   	<%= c.text_field(:first_name, :'data-tooltip' => 'Email where you could be contacted') %> 
	   </p>
	    
	   <p>
      	<%= c.label :last_name, :class => "mandatory-field" %>
	   	<%= c.text_field(:last_name, :'data-tooltip' => 'Email where you could be contacted') %> 
		</p>

		<p>
			<%= c.label :birthday %>
			<%= c.text_field :birthday, :'data-tooltip' => 'Your birthday. MM/DD/YYYY' %>
		</p>
			   
		<%=  c.fields_for :addresses do |a|%>

        	<p>
        		<%= a.label :city, :class => "mandatory-field"%>
				<%= a.text_field(:city, :'data-tooltip' => 'Email where you could be contacted') %> 
		   </p>
		    
		   <p>
        		<%= a.label :postal_code , :class => "mandatory-field"%>
				<%= a.text_field(:zip_code, :'data-tooltip' => 'Email where you could be contacted') %>
	 		</p>

		<%end%>
		
		<%= c.fields_for :phone_numbers do |p|%>
			<p>
				<%= p.label :phone , :class => "mandatory-field"%>
				<%= p.text_field :number%>
			</p>
		<%end%>

	<%end%>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= side_bar_box('Volunteering Positions') do %>
    <% @positions.each do |p| %>
        <h3>
          <span class="om-icon-only om-blue-icon ui-icon-folder-open"></span>
			<% name = truncate(p.name, :length=>30) + "<sup>" + p.priority.to_s + "</sup>" %>
          <%=  link_to name.html_safe, volunteering_position_path(p) %>

        </h3>
    <% end %>

<% end %>
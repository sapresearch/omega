<% javascript_include_tag 'thirdParty/jquery.dataTables.min.js' %>
<% javascript_include_tag 'omega_volunteering_records' %>
<% stylesheet_link_tag 'omega_volunteering' %>
<% stylesheet_link_tag 'thirdParty/jquery.dataTables.jui.css' %>

<div class="content circle-corners-bottom corners-top">
    	
		<div class="heading-main">
			<h1 class="page-content">
  				Manage Applications
		  	</h1>
      </div>
		
	
	<div class="main-box">
	
	  <table class="width-100 clear" id="records-table">
	    <thead>
		    <tr>
		      <th>Position</th>
		      <th>From</th>
		      <th>Date</th>
		      <th>Action</th>
		      <th>Status</th>
		    </tr>
	    </thead>
	    <% if @records.empty? %>
	      <h2> No Applications to Show!</h2>
	    <% else %>
	 	   <%= render :partial => 'record_row', :collection => @records, :as => :record %>
	    <%end%>
	 </table>
    <%= will_paginate @positions %>
	 <div class="clear"></div>
	
	</div>
</div>

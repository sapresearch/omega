<%= div_for f.object do %>
    <%= errors_for_model f.object %>
    <p>
      <%= f.label :number_type %>
      <%= f.select :number_type, options_for_select(Contact::PhoneNumber::NUMBER_TYPES) %>
    </p>
    <p>
      <%= f.label :number %>
      <%= f.text_field :number, :class=> 'validate_presence' %>
    </p>
    <p>
      <%= f.label :available_time %>
      <%= f.text_field :available_time %>
    </p>
    <p>
      <%= f.label :preferred_time %>
      <%= f.text_field :preferred_time %>
    </p>
    <%= link_to_remove_nested f do %>
        <span data-tooltip="By clicking on this icon yo will remove the phone numer above">Remove Phone Number
      <span class="om-icon-only om-blue-icon ui-icon-close"></span>
            </span>
    <% end %>
<% end %>
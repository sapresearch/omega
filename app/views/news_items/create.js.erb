<% if @news_item %>
	delete_element("new_news_item_li_<%= @news_item.remote_id.to_s %>")
	$("#old_news_item_list ul").append("<%= escape_javascript( render "news_items/old_news_item_li", :news_item=>@news_item ) %>")
<% else %>
	dialog_message("news-exist", "News already exist", "<p>This news is already adopted. Please select others.</p>", {width:500})
<% end %>

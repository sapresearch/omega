<%= stylesheet_link_tag 'omega_users'%>

 <div class="content circle-corners-bottom-left">

		<div class="heading-main-columns">

				<h1 class="page-content">
      				 Hello  <%= @user.username %>

		    	</h1>

		</div>


<div class="main-box">

 <div id="vcard">
    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @user.first_name %> <%= @user.last_name %>
      </dd>
    </dl>
    <dl>
      <dt>
        Member since
      </dt>
      <dd>
        <%= @user.created_at.strftime("%m-%d-%Y")  %>
      </dd>
    </dl>
    <dl>
      <dt>
       Email
      </dt>
      <dd>
        <%= @user.email  %>
      </dd>
    </dl>


  </div>

  <p>
  	    <%=  link_to "Edit", edit_user_path(@user)%>
  	    <%= link_to "Delete", @user, :method => :delete, :confirm => "Are you sure?" %>

  </p>

</div>

</div>

<% content_for :sidebar do %>
    <%= render :partial => "layouts/sidebar_user" %>
<% end %>

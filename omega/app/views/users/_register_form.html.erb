
<%= form_for @user, :url => register_users_path do |f| %>
    <%= errors_for_form @user %>
	
	<%= f.fields_for :contact do |c|%>
	
	 <h3 class="application-form">PERSONAL INFORMATION </h3> 
		<p>	
      		<%= c.label :first_name %>
      		<%= c.text_field(:first_name, :'data-tooltip' => 'Your first name')%> 
   		</p>
	
    	<p>
      		<%= c.label :last_name %>
      		<%= c.text_field(:last_name, :'data-tooltip' => 'Your last name')%>
    	</p>

    
		<%=  c.fields_for :addresses do |a|%>

        <p>
        	<%= a.label :city %>
			<%= a.text_field(:city, :'data-tooltip' => 'Email where you could be contacted') %>

	    </p>
		
		<p>
        	<%= a.label :postal_code %>
			<%= a.text_field(:zip_code, :'data-tooltip' => 'Email where you could be contacted') %>

	    </p>
		<%end%>
		
		<%= c.fields_for :phone_numbers do |p|%>
		<p>
			<%= p.label :phone %>
			<%= p.text_field :number%>
	    </p>
		
		<%end%>
	<%end%>
              
    <h3 class="application-form">LOG IN INFORMATION </h3> 

   <%= f.fields_for :contact do |c|%>
   
   <p>
      <%= c.label :email %>
      <%= c.text_field(:email, :'data-tooltip' => 'Email where you could be contacted') %>
    </p>
	
	
	  
	<p>
		<%= c.label :confirm_email %>
      <%= c.text_field(:email_confirmation, :'data-tooltip' => 'Email where you could be contacted') %>

	</p>
   <%end%>
   
    <p>
      <%= f.label :username %>
      <%= f.text_field(:username, :'data-tooltip' => 'Username should include atleast 2 characters')%>
    </p>

    <p>
      <%= f.label :password %>
      <%= f.password_field(:password, :'data-tooltip' => 'The password should have atleast 8 characters') %>
    </p>

    <p>
      <%= f.label :confirmation %>
      <%= f.password_field :password_confirmation %>
    </p>

	  <%#= f.label :time_zone %>
	  <%#= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
		
		 <h3 class="application-form">NEWS LETTERS </h3> 

		<%= f.fields_for :contact do |c|%>
		<p>
			
		<span class="check-box-set"> 

	    	<%= c.label 'Evergreen News'%>
			<%= c.check_box :evergreen_news%> 
		
			<%= c.label 'Evergreen Brick Works News'%>
			<%= c.check_box :evergreen_bw_news%>

			<%= c.label 'Dig In! GTA (Volunteer News and Opportunities'%>
			<%= c.check_box :gta_volunteer_news%> 
			
			<%= c.label 'Dig In! Vancouver (Volunteer News and Opportunities'%>			
 			<%= c.check_box :vancouver_volunteer_news%> 
			
			<%= c.label 'The Outdoor Classroom (School Ground Greening Newsletter'%>			
 			<%= c.check_box :outdoor_classroom%> 
			
			<%= c.label 'La classe en plein air (French edition of The Outdoor Classroom)'%>			
 			<%= c.check_box :la_classe_en_plein_air%> 
		
	        <%= c.label 'Evergreen Funding Opportunities'%>			
			<%= c.check_box :evergreen_funding_opp%> 
			
			<%= c.label 'Evergreen Brick Works School Program'%>			
 			<%= c.check_box :evergreen_bw_school_program%> 
 			
			<%= c.label 'Evergreen Brick Works Family Programming'%>			
			<%= c.check_box :evergreen_bw_family_program%> 
			
	    </span>


				
		</p>
		<p>
      		<%= c.label :where_did_you_hear_about_us? %>
      		<%= c.text_field(:about_us, :'data-tooltip' => '')%>
        </p>
	    </span>
			
	    <%end%>	

    <p>
    <%= om_button do %>
        <%= f.submit "REGISTER" %>
    <% end %>
    </p>

<% end %>


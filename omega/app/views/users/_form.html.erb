<%= form_for @user do |f| %>
    <%= errors_for_form @user %>
    <fieldset>
      <legend>User Details</legend>
      <p>
        <%= f.label :user %>
        <%= f.text_field(:username, :'data-tooltip' => 'Plese provide username with at least 2 characters') %>
      </p>

      <p>
        <%= f.label :first_name %>
        <%= f.text_field(:first_name, :'data-tooltip' => 'Plese provide lastname') %>
      </p>

      <p>
        <%= f.label :last_name %>
        <%= f.text_field(:last_name, :'data-tooltip' => 'Plese provide lastname') %>
      </p>

      <p>
        <%= f.label :email %>
        <%= f.text_field(:email, :'data-tooltip' => 'Plese provide email') %>
      </p>


      <p>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </p>

      <p>
        <%= f.label :confirmation %>
        <%= f.password_field :password_confirmation %>
      </p>

      <p>
        <%= f.label :time_zone %>
        <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
      </p>

    </fieldset>
     <%= with_permission(User::PERM_ADMIN) do %>


    <fieldset>
      <legend>Roles and Permissions</legend>
      <%= render 'role_assignments', :form => f %>
    </fieldset>
 <% end %>




    <%= om_button(:icon => 'save') do %>
        <%= f.submit %>
    <% end %>


<% end %>


<h3 class="content-heading"> Sharing </h3>
	<div class="content sharing-content">
		<p> Social Media Accounts to Activate: </p>
		



			<%= with_permission(Setting::PERM_ADMIN) do %>
				<% if @setting.facebook_token.nil? then %>
				<div class="field" >
					<%= s.label "Facebook App Token" %>
					<%= s.text_field(:facebook_token) %>
				</div>
			<% end %>

			<% if @setting.fb_secret.nil? then %>
				<div class="field" >
					<%= s.label "Facebook Secret Token" %>
					<%= s.text_field(:fb_secret) %>
				</div>
			<% end %>

			<br /><br />
			<p><a href="http://www.developers.facebook.com"> Read about how to get started with Facebook sharing </a></p>


			<%= "You've added all available accounts" unless @setting.fb_secret.nil? and @setting.facebook_token.nil? %>
	</div>
			<% end %> <!-- end of with_permission loop !-->



		<!--<p> Your organization has created a Facebook App.  Just click the link below to log into Facebook.  This will allow you to post from your MyOmega page and keep your friends informed on your organization's activites. </p>!-->
		<fb:login-button perms="offline_access">Login with Facebook</fb:login-button>
		
			</br>
			<div class="actions" style="margin-left: 40%">
				<p>
					<%= s.submit "Update Settings" %>
				</p>
			</div>
		<% end %>



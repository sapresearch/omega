<div class="sidebar-menu">
  <h1 class="corners-top">Menu</h1>

  <div class="corners-bottom sidebar-menu-content">
    <ul>
      <li>
          <span class="om-button">
             <span class="om-icon om-icon-edit"></span>
            <%= link_to 'Edit', edit_volunteering_position_path(@position), :class => 'om-icon-space ' %>
            </span>

      </li>
      <li>
          <span class="om-button">
            <span class="om-icon om-icon-back"></span>
            <%= link_to 'Back', volunteering_positions_path, :class=> 'om-icon-space' %>

            </span>
      </li>
      <li>
        <% if already_favorite?(@position) %>
            <span class="om-button">
            <span class="om-icon om-icon-favorite-remove"></span>

<%= form_for(@record) do |f| %>

    <%= errors_for_form @record %>

    <%= f.hidden_field :position_id %>

    <% if @record.contact.new_record? %>
    <%= f.fields_for :contact do |c| %>

        <%= c.hidden_field :id %>
        <p>
          <%= c.label t(:title) %>
          <%= c.select :title, options_for_select(Contact::TITLES) %>
        </p>

        <p>
          <%= c.label :first_name %>
          <%= c.text_field :first_name %>
        </p>

        <p>
          <%= c.label :last_name %>
          <%= c.text_field :last_name %>
        </p>
        <p>
          <%= c.label :email %>
          <%= c.text_field :email %>
        </p>

        <p>
          <%= c.label :skills %>
          <%= c.text_field :skills_values %>
        </p>

        <p>
          <%= c.label :interests %>
          <%= c.text_field :interests_values %>
        </p>

        <%= c.fields_for :phone_numbers do |p| %>

            <%= p.hidden_field :id %>

            <%= p.hidden_field :number_type %>


            <p>
              <%= p.label :phone_number %>
              <%= p.text_field :number %>
            </p>

        <% end %>

    <% end %>
    <% else %>
        <%= f.hidden_field :contact_id %>
    <% end %>
      <%= f.hidden_field :status, :value => 'Applied' %>
      <%= f.hidden_field :action, :value => 'To be Taken!' %>
    <p>
      <%= f.label :notes %>
      <%= f.text_area :notes %>
    </p>

    <%= om_button do %>
        <%= f.submit 'Apply' %>
    <% end %>


<% end %>

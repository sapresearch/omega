<% require_javascript 'thirdParty/jquery.timepicker.js', 'jshashtable-2.1.js', 'jquery-frontier-cal-1.3.2', 'calendars.js' %>
<% require_stylesheet 'jquery-frontier-cal-1.3.2.css', 'omega_calendars.css' %>

<h1 class="page-content corners-top">
  Calendar
</h1>

<div class="page-content corners-bottom">
  <div id="toolbar" class="ui-widget-header ui-corner-all" style="padding:3px; vertical-align: middle; white-space:nowrap; overflow: hidden;">
    <%= om_button(:plain => true, :icon => 'calendar-prev' ) do %>
        <span id='BtnPreviousMonth'>Previous Month</span>
    <% end %>
    <%= om_button(:plain => true, :icon => 'calendar-next') do %>
        <span id="BtnNextMonth">Next Month</span>
    <% end %>
    &nbsp;&nbsp;&nbsp;
    Date: <input type="text" id="dateSelect" size="20"/>




  </div>
  <div id="cal">
  </div>
  <div id="create_event">


  </div>

</div>



<div id="add-event-form" title="Add New Event">
  <%= render "/events/form", :event => Event.new(:calendar_id => 1) %>
</div>

<div id="display-event-form" title="View Agenda Item">

</div>



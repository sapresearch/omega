$('body').append('<%= escape_javascript(render 'form', :event => @event, :calendar => @calendar) %>');

if($('#event_allday').is(':checked')){
   $('.tpickr').hide();
}
        $('#event_allday').change(function(){
            if($(this).is(':checked')){
                $('.tpickr').hide();
            }else{
                $('.tpickr').show();
            }
});


        $('#new_calendar_event').dialog({
            autoOpen    : true,
            width       : 800,
            title       : 'Create a new event',
            close       :function(e,ui){
                $(this).dialog('destroy');
                $('#new_calendar_event').remove();
            }
        });


<% if @event.valid? %>


        $('#cal').data('plugin').addAgendaItem(
                "#cal",
                '<%= @event.title %>',
                new Date('<%= @event.start_date %>'),
                new Date('<%= @event.end_date %>'),
                false,
        {
            fname: "Santa",
            lname: "Claus",
            leadReindeer: "Rudolph",
            myExampleDate: new Date()
        }
                );


        $('#add-event-form').dialog('close');
        <% else %>
        $('#add-event-form').html('<%= escape_javascript(render "/events/form", :event => @event) %>');
        <% end %>

<%= form_for @event do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.hidden_field :calendar_id, :value => @calendar.id %>
  </p>
    
  <p>
    <%= f.label :event_name %><br />
    <%= f.text_field :event_name %>
  </p>

  <p>
    <%= f.label :start_date %><br />
    <%= f.text_field :start_date %> Format: YYYY-MM-DD
  </p>

  <p>
    <%= f.label :end_date %><br />
    <%= f.text_field :end_date%> Format: YYYY-MM-DD
  </p>

  <p>
    <%= f.label :start_time %><br />
    <%= f.text_field :start_time %> Format: HH:MM:SS
  </p>

  <p>
    <%= f.label :end_time %><br />
    <%= f.text_field :end_time%> Format: HH:MM:SS 
  </p>

  <p>
    <%= f.label :event_description %><br />
    <%= f.text_area :event_description%> 
  </p>


  <p><%= f.submit %></p>
<% end %>

<form>
  <input id="search_text" type="text" maxlength="100" size="50" value="Type here to search..."
         onclick="$(this).select()"
         onblur="
           if(is_empty_html($(this).val())){
             $(this).val('Type here to search...'); 
             $('.asset_unit').show();
             $('.no_match').hide();
           }"
           />
</form>


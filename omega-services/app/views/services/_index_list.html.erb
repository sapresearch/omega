      <div id="accordion">
        <% @services.each do |service| %>
          <h3><a href="#"><%= service.name %></a></h3>
          <div>
            <p><%= service.description %></p>
            <div class="service_left_links">
              <% if is_admin?(current_user) %>
                <p>
                  <%= link_to "Delete", service_url(service), :method=>:delete, :confirm=>"Are you sure?", :remote=>true %> |
                  <%= link_to "Edit", edit_service_url(service) %>
                </p>
              <% end %>
            </div>
            <div class="service_right_links">
              <p>
                <%= link_to "View Services", services_url(:super_service_id=>service.id), :remote=>true %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
      <script>
        services_accordion();
      </script>
      <div id="accordion">
        <% @services.each do |service| %>
          <h3 id="service_title_<%= service.id %>" <%= "class='service_leaf'" if service.is_leaf? %> ><a href="#"><%= service.name %></a></h3>
          <div id="service_body_<%= service.id %>" >
            <p><%= service.description %></p>
            <div class="service_left_links">
              <% if is_admin?(current_user) %>
                <p>
                  <%= link_to "Edit", edit_service_url(service) %> |
                  <%= link_to "Delete", service_url(service), :method=>:delete, :confirm=>"Are you sure?", :remote=>true %>                  
                </p>
              <% end %>
            </div>
            <div class="service_right_links">
              <p>
                <% if service.is_leaf? %>
                  <%= link_to "Register >>", {} %>
                <% else %>
                  <%= link_to "View Services >>", services_url(:super_service_id=>service.id), :remote=>true %>
                <% end %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
      <script>
        services_accordion();
      </script>
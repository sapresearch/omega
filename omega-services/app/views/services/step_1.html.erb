<% require_javascript 'service.js' %>
<% require_stylesheet 'omega_services.css' %>
<h1 class="page-content corners-top">
  Create a Service Wizard - Step 1
</h1>
<div class="page-content corners-bottom">

  <span class="style3">Please Choose:</span> <br/>
  <br/>
  <% [["Select From Existing Types", "checked"], ["New Enrollable Type", ""], ["New Requestable Type", ""]].each do |choice, check| %>
      <%= radio_button_tag 'service_type', choice, false, {:onclick => "javascript: clicked(this.id)"} %>
      <%= choice %> <br/>

  <% end %>
  <%= hidden_field "step1_choice", '', :value => session[:step1_choice] %>


  <div id="service_with_type">

    <p class="left-align">
      <span class="style3">Choose a Type:</span> <br/>
      <% Service::Type.all.each do |s| %>
          <%= radio_button 'service_library', 'service_type', s.service_type,
                           {:onclick => "javascript: service_types(this.value)"} %>
          <%= s.service_type %><%= image_tag s.icon.url, :width =>  '65' %><br/>
      <% end %>
    </p>
  </div>
  <div id="service_without_type">
  </div>
</div>
<div id="list">
  <div id="fields_list">
    <% unless @service.nil? %>
        <p class="left2">
          <span class="style3">Preview Details</span>

          <strong>Service Category: </strong><%= @service.service_category %> <br/>
          <strong>Description:</strong><%= @service.description %><br/>

          <% Service::Field.find_all_by_field_category_and_service_id("Service Details", @service.id).each do |s| %>

              <strong><%= s.field_name %></strong>:
              <%= Service::Detail.find_by_field_id(s.id).field_value %>
              <br/>

          <% end %>

          <br/>
          <span class="style2">Registration Details</span><br/>

          <% Service::Field.find_all_by_field_category_and_service_id("Registration Details", @service.id).each do |s| %>

              <strong><%= s.field_name %></strong> <br/>

          <% end %>
        </p>

        <div class="bottom-buttons">

          <%= om_button(:icon=>'next-step') do %>
              <%= link_to 'Save', service_wizard_services_url(:step => '2') %>
          <% end %>
          <%= om_button(:icon=>'prev-step') do %>
              <%= link_to 'Back', service_wizard_services_url(:step => 'introduction') %>
          <% end %>
          <%= om_button(:icon=>'cancel') do %>
              <%= link_to 'Cancel', @service, :confirm => 'Are You Sure?', :method => :delete %>
          <% end %>
    <% end %>
    </div>

  </div>




  <% content_for :sidebar do %>
      <%= render :partial => "layouts/sidebar_services_introduction" %>
  <% end %>
<% require_javascript 'service.js' %>
<% require_stylesheet 'services.css' %>



<h1 class="page-content corners-top">
  Volunteering Positions
</h1>


<div class="page-content corners-bottom">

      <div class="steps">
        <div class="step2"></div>

      </div>
      <div class="content-services">

    <div class="left">

        <p class="left-align">
          <span class="style3">Please Choose:</span> <br/>

          <br/>
          <% [["I'll Choose From the Library", "checked"], ["I'll Create My Own Type", ""]].each do |choice, check| %>
              <%= radio_button 'service', 'service_type', choice,
                               {:onclick => "javascript: service_type_choice(this.value)", :checked => check} %>
              <%= choice %> <br/>

          <% end %>
        </p>

        <div id="service_with_type">


          <p class="left-align">

            <span class="style3">Choose a Type:</span> <br/>


            <% Service::Type.all.each do |s| %>
                <%= radio_button 'service_library', 'service_type', s.service_type,
                                 {:onclick => "javascript: service_type(this.value)"} %>

                <%= s.service_type %>  <%= image_tag s.icon.url, :width =>  '65' %><br/>

                <%end%>

          </p>
        </div>

        <div id="service_without_type">


        </div>
</div>

        <div id="list">
        

          <div id="fields_list">

            <% unless @service.nil? %>


                <p class="left2">
                  <span class="style3">Preview Details</span>

                  <br/>
                  <br/>

                  <strong>Service Category: </strong><%= @service.service_category %> <br/>
                  <strong>Description:</strong><%= @service.description %><br/>

                  <% Service::Field.find_all_by_field_category_and_service_id("Details", @service.id).each do |s| %>

                      <strong><%= s.field_name %></strong>:
                      <%= Service::Detail.find_by_field_id(s.id).field_value %>
                      <br/>

                  <% end %>

                  <br/>
                  <span class="style2">Registration Details</span><br/>

                  <% Service::Field.find_all_by_field_category_and_service_id("Registration", @service.id).each do |s| %>

                      <br/>

                      <strong><%= s.field_name %></strong> <strong>(Field Type: <%= s.field_type %>)</strong>

                      <br/>

                  <% end %>
                </p>

                <div class="bottom-buttons">

                  <%= om_button(:icon=>'next-step') do %>
                      <%= link_to 'Save', service_wizard_services_url(:step => '2', :id => @service.id) %>
                  <% end %>

                  <%= om_button(:icon=>'prev-step') do %>
                      <%= link_to 'Back', service_wizard_services_url(:step => 'introduction') %>
                  <% end %>

                  <%= om_button(:icon=>'cancel') do %>
                      <%= link_to 'Cancel', @service, :confirm => 'Are You Sure?', :method => :delete %>
                  <% end %>


            <% end %>
            </div>

          </div>
          <div class="clear"></div>

        </div>


      </div>


</div>

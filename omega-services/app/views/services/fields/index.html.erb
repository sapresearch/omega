<% require_stylesheet "services"%>

<div class="wrapper-services">

<div class="container-show">
  <div class="header">

<h2 class="index"><%=@service.service_name%> Service</h2>
  </div>
<p class="left-align">
  <span class="heading1">Enrollment Information</span>
        <% @fields.each do |field| %>
            <% if field.service_id == @service.id%>
                <br/><%= field.field_name%>
             <%end%>
        <%end%>
</p>

<%if !current_user.is_anonymous?%>
<p class="left-align">
  <br/>
  <strong><%= link_to 'Add a Field to '+@service.service_type+ ' Service', new_service_service_field_url(@service.id)%>

  <br/>
  <%= link_to 'All Services ', services_url%>
  </strong>
</p>


<%end%>

    </div>
    </div>
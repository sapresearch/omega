<% require_javascript 'add_field.js' %>
<% require_stylesheet 'services.css' %>


<h1 class="page-content corners-top">

  Add More Fields to <%= @service.service_name %> - <%= @service.service_type %>

</h1>

<div class="page-content corners-bottom">

  <p class="left-align">
           <span class="style3">Please Choose:</span> <br/>

           <br/>
           <% [["Add a Service Detail", "checked"], ["Add a Registration Detail", ""]].each do |choice, check| %>
               <%= radio_button 'service', 'service_field', choice, {:checked => check} %>
               <%= choice %> <br/>

           <% end %>
         </p>



  <div id="service_fields">

    <%= render :partial => "service_field_form" %>

  </div>


  <div id="registration_fields">

    <%= render :partial => "registration_field_form" %>


  </div>



</div>
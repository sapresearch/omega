<% require_stylesheet "services"%>


<div class="wrapper-services">

<div class="container-show">

<div class="header">

<h2 class="index"> Add a Field to <%= @service.service_name %></h2>
</div>
  <%= form_for @field do |f| %>

      <%= errors_for_form(@field, 'field') %>
      <%= f.hidden_field :service_id, :value => @service.id %>
      <p class="left-align">

      <strong>Field Name</strong><br/>
      <%= f.text_field :field_name %><br/>

      <br/>
      <strong>Field Type</strong><br/>
      <%=f.select :field_type, options_for_select(%w{ TextArea TextField NumberField }) %> <br/>

      <br/>
      <%= f.submit %>
  <% end %>

</p>
</div>
    </div>
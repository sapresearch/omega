<% require_stylesheet 'services.css' %>


<h1 class="page-content corners-top">
  Add another Service Detail to <%= @service.service_name %>
</h1>
<div class="page-content corners-bottom">

  <%= form_for @field do |f| %>

      <%= errors_for_form(@field, 'field') %>
      <%= f.hidden_field :service_id, :value => @service.id %>
      <p class="left-align">

      <strong>Field Name</strong><br/>
      <%= f.text_field :field_name %><br/>

      <br/>
      <strong>Field Type</strong><br/>
      <%=f.select :field_type, options_for_select(%w{ Text String Number Date Time }) %> <br/>

      <br/>

       <%= f.hidden_field :field_type_class, :value => "default"%>
       <%= f.hidden_field :field_category, :value => "Registration" %> <br/>


      <%= f.submit %>
  <% end %>

</p>
</div>

<%= form_for @service, :html => {:multipart => true} do |f| %>
    <%= errors_for_form @service %>
    <h2>

      Please Define Your Custom Type
    </h2>
    <p>
      <%= f.label :service_type %>
      <%= f.text_field :service_type %>
    </p>
    <p>
      <%= f.label :service_category %>
      <%= f.select :service_category,
                   options_for_select(%w{ Enrollable Requestable Other }) %>
    </p>
    <p>
      <%= f.label :icon %>
      <%= f.file_field :icon %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>

    </p>
    <%= f.fields_for :type do |s| %>

        <%= s.hidden_field :service_type %>
        <%= s.hidden_field :service_category %>
        <%= s.hidden_field :icon %>
        <%= s.hidden_field :description %>

    <% end %>
    <p>
      <%= om_button(:icon=>'next-step') do %>
          <%= f.submit "Save & Proceed" %>
      <% end %>
      <%= om_button(:icon=>'cancel') do %>
          <%= link_to 'Cancel', new_service_url %>
      <% end %>
    </p>
<% end %>



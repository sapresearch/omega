<% require_stylesheet "services"%>

<div class="wrapper-services">

<div class="container-show">

  <div class="header">

<h2 class="index"><%=@service.service_name%> Service</h2>
   </div>

<p class="left-align">
  <span class="style2">Service Details</span><br/>

    <%Service::Field.find_all_by_field_category_and_service_id("Details", @service.id).each do |s|%>

     <br/>

     <strong><%=s.field_name%></strong>:
             <%=Service::Detail.find_by_field_id(s.id).field_value%>
     <br/>

  <%end%>

    <br/>
  <span class="style2">Registration Details</span><br/>

     <%Service::Field.find_all_by_field_category_and_service_id("Registration",@service.id).each do |s|%>

     <br/>

     <strong><%=s.field_name%></strong>  <strong>(Field Type: <%=s.field_type%>)</strong>

     <br/>

  <%end%>
  </p>


<p class="left-align">
  <br/>
  <strong><%= link_to 'Add a Field to '+@service.service_type+ ' Service', new_service_service_field_url(@service.id)%>

  <br/>
  <%= link_to 'All Services ', services_url%>
  </strong>
</p>


</div>
    </div>
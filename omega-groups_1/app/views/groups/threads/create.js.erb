<% if @thread.valid? %>
$('#new_group_thread').remove().parents('.ui-dialog').remove();
        <% else %>
        $('#new_group_thread').remove().parents('.ui-dialog').remove();
        $('body').append('<%= escape_javascript(render(:partial => 'form.html')) %>');
        $('#new_group_thread').dialog({
                autoOpen:true,
            width: 600,
            title : 'Update new thread',
            close : function(){
                $(this).dialog('destroy').andSelf().remove();
            }
        });
        <% end %>
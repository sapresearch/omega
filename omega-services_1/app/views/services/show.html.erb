<% require_stylesheet 'services.css' %>


<div class="content circle-corners-bottom-left">
    	
		<div class="heading-main-columns">
	
				<h1 class="page-content">
      				<%= @service.service_name%> Service
		    	</h1>
	
		</div>

  <p>    

  <span class="style2">Service Details </span> <br/>

  <br/>
  <strong>Service Type:</strong>
           <%= @service.type.type_name %><br/>

           
           <br/>
           <strong>Published: </strong>
           <% if @service.published.to_s == "true" %>

              Yes

           <%else%>

              No

           <%end%><br/>

  </p>

  <% Service::Field.where("field_category = ? and service_id = ?", "Service Details", @service.id).each do |s| %>
      <p>

        <strong><%= s.field_name %>: </strong>
        <%= Service::Field::Value.find_by_field_id(s.id).field_value %>
		
      </p>
  <% end %>
  <p>
  <br/><span class="style2">Registration Details </span> <br/>

              <br/>
              <strong> First Name <br/>
              Last Name <br/>
              Email <br/>
              Phone Number <br/>
              Notes <br/>
              </strong>

              
  </p>

  <% Service::Field.find_all_by_field_category_and_service_id("Registration Details", @service.id).each do |s| %>
      <p>
        <strong><%= s.field_name %></strong>
      </p>
  <% end %>

</div>


<% content_for :sidebar do %>
    <%= render :partial => "layouts/show_service_menu" %>
<% end %>

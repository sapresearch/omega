<% require_stylesheet 'csv_import' %>
<% require_javascript 'csv_import' %>


<h1 class="page-content corners-top">

  STEP 2: Field Mapping

</h1>

<div class="page-content corners-bottom">

  <div class="csv-container">

    <div class="content">

      <%= form_for @import do |f| %>
          
      <table>
        <tr>
          <td>

            <table class="csv-table">

               <th class="csv-table">Final Fields</th>

                  <%$rows[0].each do |c|%>

                    <% unless c.nil? %>

                      <tr class="csv-table">

                         <td class="csv-table">
                            <%=c%>
                         </td>



                      </tr>
                    <%end%>

                  <%end%>

            </table>
          </td>

          <td>

            <table class="csv-table">

                  <th class="csv-table">Imported Data Preview</th>

                      <% $rows[1].each do |d| %>

                          <% unless d.nil?%>
                                 <tr class="csv-table">

                                     <td class="csv-table">
                                         <%=d%>
                                     </td>
                                 </tr>
                          <%end%>


                      <%end%>
            </table>

          </td>
        </tr>
        
      </table>

      <%=f.submit "Update"%>

      <%=f.submit "Import"%>


      <%end%>
    </div>

  </div>

</div>



















